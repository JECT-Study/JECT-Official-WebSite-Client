{
  "name": "@ject/jds",
  "version": "0.0.1",
  "description": "Ject Design System",
  "author": "Ject Team",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "import": "./dist/theme.js",
      "require": "./dist/theme.cjs"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --fix --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_TOKEN",
    "build:tokens": "npx tsx tokensBuilder.ts",
    "clean": "rm -rf dist node_modules .turbo storybook-static",
    "build:icons": "svgr src/assets/icons --out-dir src/components/Icon/generated --typescript --ext tsx",
    "type-check": "tsc -b --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "radix-ui": "^1.4.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@emotion/babel-plugin": "^11.13.5",
    "@ject/eslint-config": "*",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/addon-onboarding": "9.1.16",
    "@storybook/react-vite": "9.1.16",
    "@svgr/cli": "^8.1.0",
    "@svgr/core": "^8.1.0",
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "chromatic": "^11.25.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "9.1.16",
    "style-dictionary": "^4.3.2",
    "tsup": "^8.5.0",
    "zod": "^3.25.76",
    "eslint-plugin-storybook": "9.1.16",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@emotion/react": ">=11",
    "@emotion/styled": ">=11"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module"
}
