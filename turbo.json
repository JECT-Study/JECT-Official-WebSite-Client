  {
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "build/**"],
        "env": ["NODE_ENV", "VITE_*", "SENTRY_*"]
      },
      "dev": {
        "cache": false,
        "persistent": true,
        "dependsOn": ["^build"]
      },
      "lint": {
        "dependsOn": ["^build"]
      },
      "preview": {
        "cache": false
      },
      "storybook": {
        "cache": false,
        "persistent": true
      },
      "build-storybook": {
        "outputs": ["storybook-static/**"]
      },
      "chromatic": {
        "cache": false,
        "env": ["CHROMATIC_TOKEN"]
      },
      "clean": {
        "cache": false
      }
    }
  }